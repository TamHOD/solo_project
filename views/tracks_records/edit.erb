<h1>Edit Track on Record</h1>

<form class="edit-track-on-record" action="/tracks_records" method="post">

  <label for="track-select">Select Track:</label>
  <select name="track_select">
    <% @tracks.each do |track| %>
    <% if track.id == @track_record.track_id %>
    <option value=<%= track.id %> selected><%= track.track_title %>
    </option>
    <% else %>
    <option value=<%= track.id %>><%= track.name %></option>
    <% end %>
    <% end %>
  </select>

  <label for="record-select">Select Record:</label>
  <select name="record_select">
    <% @records.each do |record| %>
      <% if record.id == @track_record.record_id %>
        <option value=<%= record.id %> selectd><%= record.title %></option>
      <% else %>
        <option value=<%= record.id %>><%= record.name %></option>
      <% end %>
    <% end %>
  </select>

  <label for="track-number">Enter Track Number:</label>
  <input type="number" name="track_number" value="1" min="1">

  <div class="add-track-to-record">
    <input type="submit" value="Add Track to Record"/>
  </div>
</form>
