<h1>Tracks on Records</h1>

<table>
  <tr>
    <th>Track Title</th>
    <th>Record Title</th>
    <th>Track Number</th>
  </tr>

  <% @tracks_records.each do |track_record|   %>
  <tr>
    <td><a href="/tracks/<%= track_record.track_id %>"><%= track_record.track_title  %></a></td>
    <td><a href="/records/<%= track_record.record_id %>"><%= track_record.record_title  %></a></td>
    <td><a href="/tracks_records/<%= track_record.id %>"><%= track_record.track_number()   %></a></td>
  </tr>

  <% end %>
</table>

<form action="/tracks_records/new" method="post">
  <input type="submit" value="Add New Track to Record">
</form>
