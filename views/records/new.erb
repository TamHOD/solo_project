<h1>Add new record</h1>

<form class="add-record" action="/records" method="post">
  <p><label for="title">Title:</label>
  <input type="text" name="title" value="Enter Title" id="title"></p>

  <p><label for="artist-select">Artist:</label>
  <select name="artist_id" id="artist_select">
    <% @artists.each do |artist| %>
    <option value=<%= artist.id  %>><%= artist.name %></option>
    <% end %>
  </select></p>

  <p><label for="stock">Stock:</label>
  <input type="number" name="stock" value="0" id="stock"></p>

  <div class="add-record">
      <input type="submit" value="Add Record"/>
    </div>
</form>
