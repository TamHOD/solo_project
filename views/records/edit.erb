<h1>Edit Record</h1>

<form class="edit-record" action="/records/<%=@record.id  %>" method="post">
  <p><label for="title">Title:</label>
  <input type="text" name="title" value="<%= @record.title %>" id="title"></p>

  <p><label for="stock">Stock:</label>
  <input type="number" name="stock" id="stock" value="<%= @record.stock %>"></p>

  <p><label for="buy_price">Buy Price:</label>
  <input type="number" name="buy_price" value="<%= @record.buy_price %>" id="buy_price" min="0"></p>

  <p><label for="sell_price">Sell Price:</label>
  <input type="number" name="sell_price" value="<%= @record.sell_price %>" id="sell_price" min="4"></p>

  <p><label for="type-select">Type:</label>
  <select name="vinyl_wav" id="vinyl_wav">
    <% if @record.vinyl_wav == "t" %>
      <option value="true">Vinyl</option>
    <% else %>
      <option value="false">WAV</option>
    <% end %>
  </select>

  <div class="edit-record">
      <input type="submit" value="Edit Record" class="button"/>
    </div>
</form>
