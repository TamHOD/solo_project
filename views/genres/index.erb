<h1>Genres</h1>

<main id="genre-list">
    <% @genres.each do |genre|  %>
      <a href="/genres/<%= genre.id %>">
        <section class="genre">
          <h3><%= genre.name %></h3>
        </section>
      </a>

    <% end %>

<form action="/genres/new" method="post">
  <input type="submit" value="Add New Genre" class="button"/>
</form>
</main>
